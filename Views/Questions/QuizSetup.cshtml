@model QuizViewModel

<div class="container mt-5">
    <h1>Quiz Setup</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">How many questions would you like to answer?</h5>
            <p class="card-text">Total questions available: @Model.TotalQuestionsCount</p>

            <form asp-action="StartQuiz" method="post" class="mt-4">
                <div class="row g-3">
                    @foreach (var count in new[] { 5, 10, 15, 20 })
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" name="selectedQuestionCount" value="@count"
                                    class="btn btn-outline-primary w-100 @(count > Model.TotalQuestionsCount ? "disabled" : "")"
                            @(count > Model.TotalQuestionsCount ? "disabled" : "")>
                                @count Questions
                            </button>
                        </div>
                    }
                    <div class="col-12">
                        <button type="submit" name="selectedQuestionCount" value="@Model.TotalQuestionsCount"
                                class="btn btn-primary w-100">
                            All Questions (@Model.TotalQuestionsCount)
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>