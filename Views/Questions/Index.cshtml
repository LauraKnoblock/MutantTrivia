@{
}
@using MutantTrivia.Models
@model List<Question>


<h1>Trivia Questions</h1>
<p>
    <a asp-controller="Questions" asp-action="Add">Add Question</a>
</p>

@if(Model.Count == 0)
{
    <p>No Questions Yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>

            <th>
                Category
            </th>
            <th>
                Name
            </th>
            <th>
                Answer
            </th>
            
        </tr>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Id</td>
                <td>@q.Category.Name</td>
                <td>@q.Name</td>
                <td>@q.Answer</td>
            </tr>
        }
    </table>
}